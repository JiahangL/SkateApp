<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:id="@+id/player_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Player 1's Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView

        android:id="@+id/player_1_SKATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 1's S.K.A.T.E"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_below="@+id/player_1"
        android:layout_alignParentStart="true" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:id="@+id/player_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Player 2's Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/player_2_SKATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player 2's S.K.A.T.E"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_above="@+id/player_2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/player_1_add"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="Player 1 failed"
        android:layout_below="@+id/player_1_SKATE"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/player_2_add"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player_2_SKATE"
        android:layout_alignEnd="@+id/player_1_add"
        android:layout_alignStart="@+id/player_1_add"
        android:background="@android:color/holo_red_dark"
        android:text="Player 2 Failed" />

</RelativeLayout>